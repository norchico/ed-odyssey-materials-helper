{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "description": "When written: at startup, if player has pledged to a power",
  "extends" : { "$ref": "../_Event.json"},
  "allOf": [{ "$ref": "../_Event.json"}],
  "properties" : {
    "Power" : {
      "title" : "Power",
      "type" : "string",
      "examples" : [ "Li Yong-Rui", "Aisling Duval" ]
    },
    "Rank" : {
      "title" : "Rank",
      "type" : "integer",
      "examples" : [ 0, 3, 2 ]
    },
    "Merits" : {
      "title" : "Merits",
      "type" : "integer",
      "examples" : [ 0, 1260 ]
    },
    "Votes" : {
      "title" : "Votes",
      "type" : "integer",
      "examples" : [ 0, 5 ]
    },
    "TimePledged" : {
      "title" : "TimePledged",
      "description": "Time pledged in seconds",
      "type" : "integer",
      "examples" : [ 43809417, 43811142, 43813289 ]
    }
  },
  "additionalProperties" : false,
  "required" : [ "Power", "Rank", "Merits", "Votes", "TimePledged" ]
}